@model Forum.Service.Common.Extensions.Paginate<Forum.Models.Response.User.UserResponseModel>

@{
    ViewData["Title"] = "Dashboard";
}

<div class="post">
    <ul class="nav nav-pills">
        <li class="nav-item">
            <a class="nav-link active" asp-controller="Admin" asp-action="Index">Users</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" asp-controller="Admin" asp-action="Categories">Categories</a>
        </li>
    </ul>
</div>
<div class="post">
    <div class="postinfotop">
        <h2>Manage Users</h2>
    </div>
    <div class="postinfobot">

        <form asp-controller="Admin" asp-action="Index" method="post">
            <table class="table">
                <tr>
                    <td><input class="form-control" type="text" name="username" placeholder="Username" value="" /></td>

                    <td><input class="form-control" type="text" name="email" placeholder="Email" value="" /></td>

                    <td><input class="form-control" type="text" name="displayName" placeholder="DisplayName" value="" /></td>

                    <td><input type="submit" name="name" value="Search" class="btn btn-primary" /></td>
                </tr>
            </table>
        </form>

        <div class="clearfix"></div>
    </div>
</div>

@foreach (var user in Model.Entities)
{
    <partial model="@user" name="~/Views/Shared/Partials/_Profiles.cshtml" />
}

@(await Component.InvokeAsync<Forum.WebMVC.ViewComponents.Pagination.PagerViewComponent>(Model.Metadata))
