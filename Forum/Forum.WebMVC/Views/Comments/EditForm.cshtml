@model EditCommentRequestModel

@{
    ViewData["Title"] = "Comment edit";
}

<div class="post">

    <form asp-controller="Comments" asp-action="Edit" asp-route-id="@ViewBag.Comment.Id" class="form newtopic" method="post">

        <div class="topwrap">

            <div class="userinfo pull-left">

                <div class="avatar">

                    <img src="@this.Context.Request.Cookies["Avatar"]" alt="" />
                    
                </div>

            </div>

            <div class="posttext pull-left">

                <div>

                    <textarea asp-for="Description" placeholder="@ViewBag.Comment.Description" class="form-control"></textarea>

                </div>

            </div>

            <div class="clearfix"></div>

        </div>

        <div class="postinfobot">

            <div class="pull-right postreply">

                <div class="pull-left"><button type="submit" class="btn btn-primary">Post</button></div>
                <div class="clearfix"></div>

            </div>

            <div class="clearfix"></div>

        </div>

    </form>

</div>