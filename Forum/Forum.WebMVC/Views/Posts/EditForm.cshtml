@model EditPostRequestModel

@{
    ViewData["Title"] = "Post edit";
}

<div class="post">

    <form asp-controller="Posts" asp-action="Edit" asp-route-id="@ViewBag.Post.Id" asp-route-page="@ViewBag.Page" class="form newtopic" method="post">

        <div class="topwrap">

            <div class="userinfo pull-left">

                <div class="avatar">
                    <img src="@this.Context.Request.Cookies["Avatar"]" alt="" />
                </div>

            </div>

            <div class="posttext pull-left">

                <!-- Title form -->
                <div>
                    <input asp-for="Title" type="text" value="@ViewBag.Post.Title" class="form-control" />
                </div>

                <div class="row">
                    <!-- Category dropdown -->
                    <div class="col-lg-6 col-md-6">
                        <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories">
                            <option value="" disabled selected>Select Category</option>
                        </select>
                    </div>
                    <!--Sub Category dropdown optional -->

                </div>
                <!-- Description form -->
                <div>
                    <textarea asp-for="Description" placeholder="@ViewBag.Post.Description" class="form-control"></textarea>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>

        <div class="postinfobot">

            <div class="pull-right postreply">
                <div class="pull-left"><button type="submit" class="btn btn-primary">Post</button></div>
                <div class="clearfix"></div>
            </div>


            <div class="clearfix"></div>
        </div>
    </form>
</div><!-- POST -->