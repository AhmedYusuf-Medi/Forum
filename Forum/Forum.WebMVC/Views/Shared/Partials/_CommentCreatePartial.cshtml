@model CreateCommentRequestModel

<div class="post">

    <form asp-controller="Comments" asp-action="Create" class="form newtopic" method="post">

        <div class="topwrap">

            <div class="userinfo pull-left">

                <div class="avatar">

                    @if (this.Context.Request.Cookies.Any(c => c.Key == "Role"))
                    {
                        <img src="@this.Context.Request.Cookies["Avatar"]" alt="" />
                    }
                    else
                    {
                        <img src="@Message.Constants.Default_Avatar" />
                    }

                </div>

            </div>

            <input style="display: none" type="number" name="PostId" value=@Model.PostId />

            <input style="display: none" type="number" name="UserId" value=@long.Parse(this.Context.Request.Cookies["UserId"]) />

            <div class="posttext pull-left">

                <div>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <textarea asp-for="Description" placeholder="Description" class="form-control" required></textarea>
                </div>

            </div>

            <div class="clearfix"></div>

        </div>

        <div class="postinfobot">

            <div class="pull-right postreply">
                <div class="pull-left"><button type="submit" class="btn btn-primary">Comment</button></div>
                <div class="clearfix"></div>
            </div>

            <div class="clearfix"></div>
        </div>
    </form>
</div><!-- POST -->