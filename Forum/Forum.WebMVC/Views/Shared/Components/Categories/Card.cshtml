@model IEnumerable<Forum.Models.Response.Category.CategoryResponseModel>

<div class="sidebarblock">

    <h3>Categories</h3>

    <div class="divline"></div>

    <div class="blocktxt">

        <ul class="cats">
            @foreach (var category in Model)
            {
                <li><a asp-controller="Posts" asp-action="Filter" asp-route-category="@category.Category">@category.Category <span class="badge pull-right">@category.Posts</span></a></li>
            }
        </ul>

    </div>

</div>
